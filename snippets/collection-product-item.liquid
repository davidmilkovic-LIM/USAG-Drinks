<a href="{{ product.url }}" class="product-item collection-product-item {{ classes }}">
    <div class="product-item__image">
        {% render 'image', loading: 'eager', passed_image: product.featured_image, alt: product.title %}
    </div>
    <div class="product-item__content">
        <div class="product-item__title">
            {{ product.title }}
        </div>
        <div class="product-item__quantity">
            <div class="product-item__quantity-label">
                <div>Quantity</div>
                <div>{{ product.price | money }}</div>
            </div>
            <div class="product-item__quantity-selector">
                <button type="button" class="quantity-btn minus"
                    {% if product.metafields.details.button_color != blank %}
                        style="color: {{ product.metafields.details.button_color }}"
                    {% endif %}>âˆ’</button>
                <input type="number" class="quantity-input" value="1" min="1">
                <button type="button" class="quantity-btn plus"
                    {% if product.metafields.details.button_color != blank %}
                        style="color: {{ product.metafields.details.button_color }}"
                    {% endif %}>+</button>
            </div>
        </div>
        <div class="product-item__link AddToCart"
             data-id="{{ product.first_available_variant.id }}"
             {% if product.metafields.details.button_color != blank %}
                style="background: {{ product.metafields.details.button_color }}"
             {% endif %}>
            Add To Cart
        </div>
    </div>
    <div class="product-item__background"></div>

    <div>
        {% if product.metafields.details.price_image != blank %}
            <div class="product-item__price">
                <img src="{{ product.metafields.details.price_image | img_url }}" alt="{{ product.title }} Price Image">
            </div>
        {% endif %}

        {% if product.metafields.details.fruit_icon != blank %}
            <div class="product-item__fruit-icon">
                <img src="{{ product.metafields.details.fruit_icon | img_url: "master" }}" alt="{{ product.title }} Fruit Image">
            </div>
        {% endif %}

        {% if product.metafields.details.background_icon_top != blank %}
            <div class="product-item__background-icon-top">
                <img src="{{ product.metafields.details.background_icon_top | img_url }}" alt="{{ product.title }} Background Image">
            </div>
        {% endif %}

        {% if product.metafields.details.background_icon_bottom != blank %}
            <div class="product-item__background-icon-bottom">
                <img src="{{ product.metafields.details.background_icon_bottom | img_url }}" alt="{{ product.title }} Background Image">
            </div>
        {% endif %}
    </div>
</a>